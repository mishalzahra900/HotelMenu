                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/negQty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/minus" />


                    <TextView
                        android:id="@+id/textQty"
